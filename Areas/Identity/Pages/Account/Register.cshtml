@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}


<div style="width: 500px;  background-color: rgba(0, 0, 0, 0.3); text-align: center; padding: 80px; margin-top: 50px; margin-bottom: 50px; margin-right: 150px; margin-left: 300px;">

    <h1 style="color: white;">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-12">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4 style="color: white;">Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                 <div class="form-group">
                    <label asp-for="Input.Email" style="color: white;"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" style="color: white;"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword" style="color: white;"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>

    </div>
</div>
<img src="https://th.bing.com/th/id/OIP.hotQo4qF4rSHGdjDcWq5lwHaEK?pid=ImgDet&rs=1" height="920" width="1690" alt="Error" style="position: absolute; top: -5px; left: 0px; z-index: -1;" />
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
