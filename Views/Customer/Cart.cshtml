@using RecipeOnlineIngredientSystem.Models

@model List<ProductDetail>




@{ ViewData["Title"] = "Cart"; }
<h1 style="margin-left:40%">Your Cart</h1>

<br />
<div class="row" style="background-color: lightblue;">
    <table class="table table-bordered" style="width:70%; margin-left:15%">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>

             
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        <img src="@Url.Content(@item.Image)" width=75 height=75 />
    </td>
    <td>@item.Name</td>
    <td>@item.Price</td>
    <td>
        <a  asp-action="Remove" asp-controller="Customer" asp-route-id="@item.Id" class="btn btn-danger">
            Delete
        </a>
    </td>
</tr>
}
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-6">
        <a asp-action="Index" asp-controller="Customer" class="btn btn-success" style="margin-left:35%">Back to Home</a>
    </div>
    <div class="col-6 text-right">
        <h3 style="margin-right:35%">Total Amount</h3>
        <h3 style="margin-right:35%">Grant Total : @Model.Sum(c => c.Price) </h3>
        <a  asp-action="Create" asp-controller="Order" class="btn btn-info" style="margin-right:35%">Process to Checkout</a>


    </div>


    <img src="~/Images/cart.jpg" height="920" width="1690" alt="Error" style="position: absolute; top: -5px; left: 0px; z-index: -1;" />
